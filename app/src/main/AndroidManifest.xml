<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lk.example.pharmacyapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PharmacyApp">
        <activity android:name=".BuyNowActivity"></activity>
        <activity android:name=".PaymentActivity" />
        <activity android:name=".MyCartActivity" />
        <activity android:name=".DrugActivity" />
        <activity android:name=".DoctorActivity" />
        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user" />
        <activity
            android:name=".MerchantActivity"
            android:label="@string/title_activity_merchant" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>